/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    int ans=0;
    class Pair{
        int sum=0;
        int count=0;
    }
    public int averageOfSubtree(TreeNode root) {
        Solve(root);
        return ans;
    }
    public Pair Solve(TreeNode root){
        if(root==null){
            Pair n=new Pair();
            return n ; 
        }
        Pair l=Solve(root.left);
        Pair r=Solve(root.right);
        Pair s=new Pair();
        s.sum=root.val+l.sum+r.sum;
        s.count= 1+l.count+r.count ;
        if((s.sum/s.count)==root.val){
            ans++;
        }
        return s;

    }
}
